# ===========================================
# CONFIGURAÇÃO WORKADVENTURE - AR ONLINE
# ===========================================

# Banco de Dados PostgreSQL
POSTGRES_PASSWORD=sua_senha_super_segura_aqui
DATABASE_URL=postgresql://aronline_user:sua_senha_super_segura_aqui@localhost:5432/workadventure_aronline

# Redis Cache
REDIS_URL=redis://localhost:6379

# Google OAuth2 - Configure no Google Cloud Console
GOOGLE_CLIENT_ID=seu_client_id_google_aqui
GOOGLE_CLIENT_SECRET=seu_client_secret_google_aqui

# JWT e Segurança
JWT_SECRET=sua_chave_jwt_super_secreta_aqui
SECRET_KEY=sua_chave_secreta_geral_aqui

# Domínio AR Online
DOMAIN=workadventure.ar-online.com.br
ADMIN_API_URL=https://workadventure.ar-online.com.br/admin

# Integrações (habilitar/desabilitar)
ENABLE_GOOGLE_DOCS=true
ENABLE_GOOGLE_DRIVE=true
ENABLE_EXCALIDRAW=true
ENABLE_ERASER=true
ENABLE_CARDS=true

# Configurações da Empresa
COMPANY_NAME=AR Online
COMPANY_EMAIL=contato@ar-online.com.br
COMPANY_WEBSITE=https://www.ar-online.com.br

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contato@ar-online.com.br
SMTP_PASSWORD=sua_senha_email_aqui

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de Desenvolvimento
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info
